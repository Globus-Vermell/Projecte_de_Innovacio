<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tipologías</title>
</head>
<body>
  <h1>Listado de Tipologías</h1>

  <% if (typologies && typologies.length > 0) { %>
    <ul>
      <% typologies.forEach(t => { %>
        <li>
          <strong><%= t.name %></strong>  
          <% if (t.image) { %>
            <br><img src="<%= t.image %>" alt="<%= t.name %>" width="200">
          <% } %>
          — <a href="/tipologia/<%= t.id_typology %>">Ver detalle</a>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No hay tipologías registradas.</p>
  <% } %>

  <a href="/">Volver al inicio</a>
</body>
</html>