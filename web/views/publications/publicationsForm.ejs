<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nova Publicació</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de publicacions -->
        <a href="/publications" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Afegir una nova publicació</h1>
    </header>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir nueva publicació -->
            <form id="form-publication">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="title">Títol:<span class="required">*</span></label>
                    <input type="text" id="title" name="title" required />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <div class="form-group">
                    <label for="themes">Temàtica:<span class="required">*</span></label>
                    <select id="themes" name="themes" required>
                        <option value="">-- Selecciona una temàtica --</option>
                        <option value="etapes">Etapes</option>
                        <option value="arquitectura tematica">Arquitectura Temàtica</option>
                        <option value="barris">Barris</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="acknowledgment">Agradecimientos:</label>
                    <textarea id="acknowledgment" name="acknowledgment"></textarea>
                </div>

                <div class="form-group">
                    <label for="publication_edition">Edició publicació:<span class="required">*</span></label>
                    <input type="text" id="publication_edition" name="publication_edition" required />
                </div>

                <div class="form-group">
                    <fieldset class="checkbox-container">
                        <legend class="checkbox-legend">Tipologies Relacionades:</legend>
                        <% if (typologies && typologies.length> 0) { %>
                            <% typologies.forEach(t=> { %>
                                <label class="checkbox-item">
                                    <input type="checkbox" name="selectedTypologies" value="<%= t.id_typology %>">
                                    <span class="checkbox-label">
                                        <%= t.name %>
                                    </span>
                                </label>
                                <% }) %>
                                    <% } else { %>
                                        <p class="no-data-msg">No hi ha tipologies disponibles.</p>
                                        <% } %>
                    </fieldset>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/publications/publicationsForm.js"></script>
</body>

</html>