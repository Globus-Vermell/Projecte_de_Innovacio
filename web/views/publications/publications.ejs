<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicacions</title>

    <!-- Css principal y estilo de Emojis y simbolos usandos en la pagina-->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Cabecera de la página -->
    <header class="page-header">
        <div class="header-left">
            <!-- Botón para volver para atrás -->
            <a href="/" class="back-link" aria-label="Tornar al menú principal">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Publicacions</h1>
        </div>

        <!-- Filtrado de las publicaciones  -->
        <div class="header-filters">
            <select id="filterValidation" class="header-select" onchange="filterPublications()">
                <option value="all">Estat: Tots</option>
                <option value="true">Validats</option>
                <option value="false">Pendents</option>
            </select>
        </div>

        <div class="header-right">
            <a href="/publications/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nova publicació
            </a>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main-content">
        <!-- Barra de búsqueda para filtrar construcciones -->
        <div class="search-container-modern">

            <!-- Agrupa la barra de búsqueda y el botón de filtros en una fila -->
            <form class="form" onsubmit="event.preventDefault()">
                <!-- El atributo 'onsubmit' evita que la página se recargue si el usuario pulsa Enter por error -->
                <button type="button">
                    <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img"
                        aria-labelledby="search">
                        <path d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9"
                            stroke="currentColor" stroke-width="1.333" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg>
                </button>
                <!-- Mantenemos el ID 'searchInput'. 'onkeyup' llama a la función de filtrar cada vez que sueltas una tecla -->
                <input id="searchInput" class="input" placeholder="Buscar per nom, descripció..." required=""
                    type="text" onkeyup="filterPublications()">
                <!-- 'type=reset' borra el texto automáticamente y 'onclick' refresca la lista vacía -->
                <button class="reset" type="reset" onclick="filterPublications()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </form>
        </div>

        <!-- Estos inputs no se ven en la pantalla, pero guardan la selección actual de los filtros en el código JavaScript pueda leerlos -->
        <input type="hidden" id="filterValidation" value="all">

        <!-- Lista de publicaciones -->
        <section class="list">

            <!-- Bucle lógico que recorre todas las publicaciones -->
            <% if (publications && publications.length> 0) { %>
                <% publications.forEach(publication=> { %>

                    <!-- Card de cada publicación, se guardan data para usar en filtros -->
                    <article class="card" data-title="<%= publication.title %>"
                        data-description="<%= (publication.description || '') %>" ,
                        data-validated="<%= publication.validated %>">

                        <!-- Información principal de la publicación -->
                        <div class="card-info">

                            <h3 class="card-title">
                                <%= publication.title %>
                            </h3>

                            <!-- Descripción de la publicación -->
                            <p class="card-description">
                                <%= publication.description %>
                            </p>

                        </div>

                        <!-- Botones para realizar acciones: Editar y Borrar -->
                        <div class="card-actions">

                            <!-- Editar publicación -->
                            <a href="/publications/edit/<%= publication.id_publication %>" class="edit-button">
                                <img src="/images/icons/edit_icon.png" alt="Editar">Editar
                            </a>

                            <!-- Borrar publicación -->
                            <button type="button" class="delete-button"
                                onclick="deletePublication('<%= publication.id_publication %>')">
                                <img src="/images/icons/trash-2-64.png" alt="Borrar">Eliminar
                            </button>

                            <!-- Validar publicación -->
                            <% if (publication.validated) { %>
                                <button class="validated-button" disabled>
                                    <img src="/images/icons/check-icon.png" alt="Validat">Validat
                                </button>
                                <% } else { %>
                                    <button class="validation-button"
                                        onclick="validatePublication('<%= publication.id_publication %>')">
                                        <img src="/images/icons/check-icon.png" alt="Validar">Validar
                                    </button>
                                    <% } %>
                        </div>

                    </article>

                    <% }) %>

                        <% } else { %>

                            <!-- Si no hay publicaciones registradas -->
                            <p class="no-architects">No hi ha publicacions disponibles.</p>

                            <% } %>

        </section>

    </main>

    <!-- Script para filtrado y eliminación -->
    <script src="/scripts/publications/publications.js"></script>

</body>

</html>