<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicacions</title>

    <link rel="stylesheet" href="/css/paginaPrincipal.css">

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<body>

    <header class="page-header">
        <div class="header-left">
            <a href="/" class="back-link" aria-label="Tornar al menú principal">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Llistat de publicacions</h1>
        </div>

        <div class="header-right">
            <a href="/publications/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nova publicació
            </a>
        </div>
    </header>
    <div class="flex-container">

        <main class="main-content">

            <!-- BARRA DE BÚSQUEDA -->
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Buscar per títol, descripció..."
                    onkeyup="filterPublications(this.value)">
            </div>

            <% if (publications && publications.length> 0) { %>

                <div class="architect-list">

                    <% publications.forEach(publication=> { %>
                        <a href="/publications/edit/<%= publication.id_publication %>" class="architect-card-link">
                            <div class="architect-card" data-title="<%= publication.title %>"
                                data-description="<%= publication.description %>">

                                <div class="card-header">

                                    <div class="card-title-group">
                                        <h3>
                                            <%= publication.title %>
                                        </h3>
                                    </div>

                                    <button type="button" class="delete-button"
                                        onclick="deletePublication('<%= publication.id_publication %>')"
                                        aria-label="Eliminar publicació">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>

                                <p class="card-description">
                                    <%= publication.description %>
                                </p>

                            </div>
                        </a>

                        <% }); %>

                </div>

                <% } else { %>
                    <p class="no-architects">No hi ha publicacions disponibles.</p>
                    <% } %>
    </div>
    <script src="/scripts/publications/publications.js"></script>
</body>
</div>

</html>