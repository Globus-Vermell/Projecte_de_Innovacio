<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Publicación</title>

    <!-- Estilos del formulario -->
    <link rel="stylesheet" href="/css/editForm.css">

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Encabezado del formulario -->
    <header class="form-header">
        <a href="/publications" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar Publicación</h1>
    </header>

    <main class="flex-container">

        <!-- Contenedor del formulario -->
        <section class="form-container">
            <form id="form-publication-edit">

                <!-- Título de la publicación -->
                <div class="form-group">
                    <label for="title">Título: <span class="required">*</span></label>
                    <input type="text" id="title" name="title" value="<%= publication.title %>" required />
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <textarea id="description" name="description"><%= publication.description %></textarea>
                </div>

                <!-- Tema -->
                <div class="form-group">
                    <label for="themes">Tema: <span class="required">*</span></label>
                    <select id="themes" name="themes" required>
                        <option value="etapes" <%=publication.themes==='etapes' ? 'selected' : '' %>>etapes</option>
                        <option value="arquitectura tematica" <%=publication.themes==='arquitectura tematica'
                            ? 'selected' : '' %>>
                            arquitectura temática</option>
                        <option value="barris" <%=publication.themes==='barris' ? 'selected' : '' %>>barris</option>
                    </select>
                </div>

                <!-- Acknowledgment -->
                <div class="form-group">
                    <label for="acknowledgment">Acknowledgment:</label>
                    <input type="text" id="acknowledgment" name="acknowledgment"
                        value="<%= publication.acknowledgment %>" />
                </div>

                <!-- Edición de la publicación -->
                <div class="form-group">
                    <label for="publication_edition">Edición de la publicación:</label>
                    <input type="text" id="publication_edition" name="publication_edition"
                        value="<%= publication.publication_edition %>" />
                </div>

                <!-- Tipologías -->
                <div class="form-group">
                    <fieldset class="checkbox-container">
                        <legend class="checkbox-legend">Tipologies Relacionades:</legend>

                        <div class="checkbox-grid">
                            <% if (typologies && typologies.length> 0) { %>
                                <% typologies.forEach(t=> { %>
                                    <% const isChecked=currentTypologies.includes(t.id_typology) ? 'checked' : '' %>
                                        <label class="checkbox-item">
                                            <input type="checkbox" name="selectedTypologies"
                                                value="<%= t.id_typology %>" <%=isChecked %>>
                                            <span class="checkbox-label">
                                                <%= t.name %>
                                            </span>
                                        </label>
                                        <% }) %>
                                            <% } else { %>
                                                <p class="no-data-msg">No hi ha tipologies disponibles.</p>
                                                <% } %>
                        </div>
                    </fieldset>
                </div>

                <!-- Botón de enviar -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar cambios
                </button>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información de la publicación para poder editarla -->
    <script>
        const publication = JSON.parse('<%- JSON.stringify(publication) %>');
    </script>

    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/publications/publicationsEdit.js"></script>

</body>

</html>