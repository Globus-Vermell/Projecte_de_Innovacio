<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nomenclatures</title>
</head>
<body>
  <h1>Llistat de Nomenclatures</h1>

  <% if (nomenclaturas && nomenclaturas.length > 0) { %>
    <ul>
      <% nomenclaturas.forEach(n => { %>
        <li>
          <strong><a href="/nomenclature/edit/<%= n.id_nomenclature %>"><%= n.name %></a></strong>  
          <button type="button" onclick="deleteNomenclature('<%= n.id_nomenclature %>')">Eliminar</button>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No hi ha nomenclatures registrades.</p>
  <% } %>

  <a href="/">Tornar a l'inici</a> |
  <a href="/nomenclature/form">Afegir nova nomenclatura</a>

  <script>
    async function deleteNomenclature(id) {
      if (!confirm("Segur que vols eliminar aquesta nomenclatura?")) return;

      try {
        const res = await fetch(`/nomenclature/delete/${id}`, {
          method: "DELETE"
        });

        const data = await res.json();
        alert(data.message);

        if (data.success) location.reload();
      } catch (err) {
        console.error(err);
        alert("Error al eliminar la nomenclatura");
      }
    }
  </script>
</body>
</html>