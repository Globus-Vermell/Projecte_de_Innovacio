<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Proteccions</title>
</head>
<body>
  <h1>Llistat de Proteccions</h1>

  <% if (protections && protections.length > 0) { %>
    <ul>
      <% protections.forEach(p => { %>
        <li>
          <strong><a href="/protection/edit/<%= p.id_protection %>">Nivell:</a></strong> <%= p.level %>  
          <button type="button" onclick="deleteProtection('<%= p.id_protection %>')">Eliminar</button>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No hi ha proteccions registrades.</p>
  <% } %>

  <a href="/">Tornar a l'inici</a>
  <a href="/protection/form">Afegir nova protecció</a>
  <script>
    async function deleteProtection(id) {
      if (!confirm("Segur que vols eliminar aquesta protecció?")) return;

      try {
        const res = await fetch(`/protection/delete/${id}`, {
          method: "DELETE"
        });

        const data = await res.json();
        alert(data.message);

        if (data.success) location.reload();
      } catch (err) {
        console.error(err);
        alert("Error al eliminar la protecció");
      }
    }
  </script>
</body>
</html>