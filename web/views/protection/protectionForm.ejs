<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nova Protecció</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de protecciones -->
        <a href="/protection" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Nova Protecció</h1>
    </header>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir nueva protección -->
            <form id="form-protection">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="level">Nivell <span class="required">*</span></label>
                    <input type="text" id="level" name="level" required />
                </div>

                <div class="form-group">
                    <label for="description">Descripció</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar Protecció
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/protection/protectionForm.js"></script>
</body>

</html>