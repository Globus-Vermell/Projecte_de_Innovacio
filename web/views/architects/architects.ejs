<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arquitectes</title>
</head>
<body>
    <h1>Llistat d'arquitectes</h1>

    <% if (architects && architects.length > 0) { %>
        <ul>
            <% architects.forEach(architect => { %>
                <li>
                    <strong>
                        <a href="/architects/edit/<%= architect.id_architect %>"><%= architect.name %></a></strong>
                    <p><%= architect.description %></p>
                    <button type="button" onclick="deleteArchitect('<%= architect.id_architect %>')">Eliminar</button>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No hi ha arquitectes registrats.</p>
    <% } %>

    <a href="/">Tornar al men√∫ principal</a> |
    <a href="/architects/form">Afegir nou arquitecte</a>

    <script>
        async function deleteArchitect(id) {
            if (!confirm("Segur que vols eliminar aquest arquitecte?")) return;

            try {
                const res = await fetch(`/architects/delete/${id}`, {
                    method: "DELETE"
                });

                const data = await res.json();
                alert(data.message);

                if (data.success) location.reload();
            } catch (err) {
                console.error(err);
                alert("Error al eliminar l'arquitecte");
            }
        }
    </script>
</body>
</html>