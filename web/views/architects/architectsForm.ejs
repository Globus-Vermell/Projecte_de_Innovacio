<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nou Arquitecte</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de arquitectos -->
        <a href="/architects" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Nou Arquitecte</h1>
    </header>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir un nuevo arquitecte -->
            <form id="form-arquitecte">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="name">Nom <span class="required">*</span></label>
                    <input type="text" id="name" name="name" required />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="birth_year">Any de naixement</label>
                        <input type="number" id="birth_year" name="birth_year" />
                    </div>
                    <div class="form-group">
                        <label for="death_year">Any de defunció</label>
                        <input type="number" id="death_year" name="death_year" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="nationality">Nacionalitat</label>
                    <input type="text" id="nationality" name="nationality" />
                </div>

                <div class="form-group">
                    <label for="description">Biografia</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/architects/architectsForm.js"></script>
</body>

</html>