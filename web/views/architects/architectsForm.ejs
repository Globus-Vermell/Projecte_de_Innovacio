<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="UTF-8">
    <title>Nou Arquitecte</title>
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <header class="form-header">
        <a href="/architects" class="back-link"><i class="fas fa-arrow-left"></i></a>
        <h1 class="page-title">Nou Arquitecte</h1>
    </header>

    <main class="form-container">
        <form id="form-arquitecte">
            <div class="form-group">
                <label for="name">Nom <span class="required">*</span></label>
                <input type="text" id="name" name="name" required />
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="birth_year">Any de naixement <span class="required">*</span></label>
                    <input type="number" id="birth_year" name="birth_year" required />
                </div>
                <div class="form-group">
                    <label for="death_year">Any de defunci√≥</label>
                    <input type="number" id="death_year" name="death_year" />
                </div>
            </div>

            <div class="form-group">
                <label for="nationality">Nacionalitat <span class="required">*</span></label>
                <input type="text" id="nationality" name="nationality" required />
            </div>

            <div class="form-group">
                <label for="description">Biografia <span class="required">*</span></label>
                <textarea id="description" name="description" required></textarea>
            </div>

            <button type="submit" class="submit-button"><i class="fas fa-save"></i> Guardar Arquitecte</button>
        </form>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.getElementById("form-arquitecte");

            form.addEventListener("submit", async (e) => {
                e.preventDefault();

                const formData = new FormData(form);
                const data = Object.fromEntries(formData.entries());

                try {
                    const res = await fetch("/architects/form", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify(data)
                    });

                    const result = await res.json();
                    alert(result.message);

                    if (result.success) {
                        form.reset();
                    }
                } catch (err) {
                    console.error("Error:", err);
                    alert("Error al enviar el formulari.");
                }
            });
        });
    </script>

</body>
</html>