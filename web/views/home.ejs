<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página d'edició de les dades</title>
    
    <!-- CSS específico del Home -->
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>

    <!-- Cabecera -->
    <header class="header">

        <!-- Logo -->
        <figure class="logo">
            <img src="./images/globus_vermell.png" alt="El Globus Vermell Logo">
        </figure>

        <!-- Información de la página -->
        <section class="header-info">
            <h1 class="page-title">Página d'edició de les dades</h1>
            <p class="page-description">Aquí podeu visualitzar i editar totes les dades de la base de dades</p>
        </section>

        <!-- Información de sesión -->
        <aside class="user-session">
            <span class="session-label">Sessió: <%= user.level %></span>
            <a href="/logout" class="logout-link">
                Tancar sessió <i class="fas fa-arrow-right-from-bracket"></i>
            </a>
        </aside>

    </header>

    <!-- Contenido principal -->
    <main class="main-content">

        <!-- Grid de cards -->
        <section class="card-grid">

            <article class="card" aria-label="Ir a Publicacions">
                <a href="/publications">
                    <i class="fas fa-file-alt"></i>
                    <span>Publicacions</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Edificacions">
                <a href="/buildings">
                    <i class="fas fa-building"></i>
                    <span>Edificacions</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Premis">
                <a href="/prizes">
                    <i class="fas fa-award"></i>
                    <span>Premis</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Protecció">
                <a href="/protection">
                    <i class="fas fa-shield-alt"></i>
                    <span>Protecció</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Nomenclatura">
                <a href="/nomenclature">
                    <i class="fas fa-tag"></i>
                    <span>Nomenclatura</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Reforma">
                <a href="/reform">
                    <i class="fas fa-wrench"></i>
                    <span>Reforma</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Tipologia">
                <a href="/typology">
                    <i class="fas fa-th-large"></i>
                    <span>Tipologia</span>
                </a>
            </article>

            <article class="card" aria-label="Ir a Arquitectes">
                <a href="/architects">
                    <i class="fas fa-pencil-ruler"></i>
                    <span>Arquitectes</span>
                </a>
            </article>

            <% if (user.level === "Admin") { %>
                <article class="card" aria-label="Ir a Usuaris">
                    <a href="/users">
                        <i class="fas fa-users"></i>
                        <span>Usuaris</span>
                    </a>
                </article>
            <% } %>

        </section>

    </main>

</body>
</html>