<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Reforma</title>

    <!-- Estilos del formulario -->
    <link rel="stylesheet" href="/css/editForm.css">

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Encabezado del formulario -->
    <header class="form-header">
        <a href="/reform" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar Reforma</h1>
    </header>

    <main class="flex-container">

        <!-- Contenedor del formulario -->
        <section class="form-container">
            <form id="form-reform-edit">

                <!-- Año de la reforma -->
                <div class="form-group">
                    <label for="year">Año de la reforma: <span class="required">*</span></label>
                    <input type="number" id="year" name="year" value="<%= reform.year %>" required />
                </div>

                <!-- Selección de arquitecto -->
                <div class="form-group">
                    <label for="id_architect">Arquitecto: <span class="required">*</span></label>
                    <select id="id_architect" name="id_architect" required>
                        <option value="">-- Selecciona un arquitecto --</option>
                        <% architects.forEach(arq => { %>
                            <option value="<%= arq.id_architect %>" <%= arq.id_architect === reform.id_architect ? 'selected' : '' %>>
                                <%= arq.name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <!-- Botón de enviar -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información de la reforma para poder editarla -->
    <script>
        const reform = JSON.parse('<%- JSON.stringify(reform) %>');
    </script>

    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/reform/reformEdit.js"></script>

</body>

</html>