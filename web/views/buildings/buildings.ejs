<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Llistat de construccions</title>
    <!-- Css principal y estilo de Emojis y simbolos usandos en la pagina-->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Cabecera de la Página-->
    <header class="page-header">
        <!-- Botón para volver atrás -->
        <div class="header-left">
            <a href="/" class="back-link"><i class="fas fa-arrow-left"></i></a>
            <h1 class="page-title">Construccions</h1>
        </div>
        <!-- Botón para añadir nuevo edificio -->
        <div class="header-right">
            <a href="/buildings/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nou edifici
            </a>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main-content">
        <!-- Barra de búsqueda para filtrar construcciones -->
        <div class="search-container-modern">

            <form class="form" onsubmit="event.preventDefault()">
                <button type="button">
                    <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img"
                        aria-labelledby="search">
                        <path d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9"
                            stroke="currentColor" stroke-width="1.333" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg>
                </button>
                <input id="searchInput" class="input" placeholder="Buscar per nom, descripció..." required=""
                    type="text" onkeyup="filterBuildings()">
                <button class="reset" type="reset" onclick="filterBuildings()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </form>

            <div class="dropdown-wrapper">
                <button id="multiLevelDropdownButton" class="dropdown-btn" type="button" onclick="toggleDropdown()">
                    <i class="fas fa-filter"></i> Filtres
                    <i class="fas fa-chevron-down"></i>
                </button>

                <div id="multi-dropdown" class="dropdown-menu">

                    <div class="dropdown-item-group">
                        <div class="dropdown-item">
                            <span>Estat Validació</span>
                            <i class="fas fa-chevron-left"></i>
                        </div>
                        <div class="submenu">
                            <div class="dropdown-item" onclick="setFilter('filterValidation', 'all')">Tots</div>
                            <div class="dropdown-item" onclick="setFilter('filterValidation', 'true')">Validats</div>
                            <div class="dropdown-item" onclick="setFilter('filterValidation', 'false')">Pendents</div>
                        </div>
                    </div>

                    <div class="dropdown-item-group">
                        <div class="dropdown-item">
                            <span>Imatge</span>
                            <i class="fas fa-chevron-left"></i>
                        </div>
                        <div class="submenu">
                            <div class="dropdown-item" onclick="setFilter('filterImage', 'all')">Tots</div>
                            <div class="dropdown-item" onclick="setFilter('filterImage', 'true')">Amb imatge</div>
                            <div class="dropdown-item" onclick="setFilter('filterImage', 'false')">Sense imatge</div>
                        </div>
                    </div>

                    <div class="dropdown-item-group">
                        <div class="dropdown-item">
                            <span>Publicació</span>
                            <i class="fas fa-chevron-left"></i>
                        </div>
                        <div class="submenu" style="max-height: 200px; overflow-y: auto;">
                            <div class="dropdown-item" onclick="setFilter('filterPublication', 'all')">Totes</div>
                            <% if (publications && publications.length> 0) { %>
                                <% publications.forEach(pub=> { %>
                                    <div class="dropdown-item"
                                        onclick="setFilter('filterPublication', '<%= pub.id_publication %>')">
                                        <%= pub.title %>
                                    </div>
                                    <% }) %>
                                        <% } %>
                        </div>
                    </div>

                    <div style="border-top: 1px solid #eee; margin-top: 5px;">
                        <div class="dropdown-item" onclick="resetFilters()" style="color: #666;">
                            <i class="fas fa-times" style="margin-right: 8px;"></i> Netejar filtres
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <input type="hidden" id="filterValidation" value="all">
        <input type="hidden" id="filterImage" value="all">
        <input type="hidden" id="filterPublication" value="all">

        <!-- Lista de construcciones -->
        <section class="list">
            <!-- Blucle logico que busca que existan buildings en la base de datos-->
            <% if (buildings && buildings.length> 0) { %>
                <% buildings.forEach(building=> { %>
                    <!-- Card de cada construcción , se guardan data en el article para poder usarlo en el filtro -->
                    <article class="card" data-name="<%= building.name %>"
                        data-description="<%= building.description %>" data-validated="<%= building.validated %>"
                        data-publication="<%= building.id_publication %>" data-validated="<%= building.validated %>">

                        <!-- Foto de la construcción -->
                        <% if (building.picture) { %>
                            <figure class="card-image">
                                <img src="<%= building.picture %>" alt="<%= building.name %>" class="img_list">
                            </figure>
                            <% } %>

                                <!-- Información principal del edificio -->
                                <div class="card-info">
                                    <h3 class="card-title">
                                        <%= building.name %>
                                    </h3>

                                    <p class="card-coords">
                                        <%= building.location %>
                                    </p>

                                    <p class="card-date">
                                        <i class="fas fa-calendar-alt"></i>
                                        <%= building.construction_year %>
                                    </p>

                                    <p class="card-architect">
                                        <%= building.architect %>
                                    </p>

                                    <!-- Descripción del edificio -->
                                    <p class="card-description">
                                        <%= building.description %>
                                    </p>
                                </div>

                                <!-- Botones clicables para poder hacer diferentes acciones: Editar, Borrar y validar -->
                                <div class="card-actions">
                                    <a href="/buildings/edit/<%= building.id_building %>" class="edit-button">
                                        <img src="/images/icons/edit_icon.png" alt="Editar"> Editar
                                    </a>

                                    <button class="delete-button"
                                        onclick="deleteBuilding('<%= building.id_building %>')">
                                        <img src="/images/icons/trash-2-64.png" alt="Borrar">Eliminar
                                    </button>

                                   <!-- Validar publicación -->
                             <% if (building.validated) { %>
                            <button class="validated-button" disabled>
                                <img src="/images/icons/check-icon.png" alt="Validat">Validat
                            </button>
                            <% } else { %>
                            <button class="validation-button"
                                onclick="validateBuilding('<%= building.id_building %>')">
                                <img src="/images/icons/check-icon.png" alt="Validar">Validar
                            </button>
                            <% } %>
                                </div>

                    </article>

                    <% }) %>
                        <!-- Si no hay construcciones, se muestra un mensaje -->
                        <% } else { %>

                            <p class="no-architects">No hi ha construccions disponibles.</p>

                            <% } %>

        </section>

    </main>
    <!-- Script para el filtrado y eliminación de construcciones -->
    <script src="/scripts/buildings/buildings.js"></script>
</body>

</html>