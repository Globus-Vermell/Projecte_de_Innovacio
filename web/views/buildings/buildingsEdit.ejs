<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Editar edificació</title>
    <!-- Estilos para el formulario de edición -->
    <link rel="stylesheet" href="/css/editForm.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Header de la página -->
    <header class="form-header">
        <a href="/buildings" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar edificació</h1>
    </header>


    <main class="flex-container">

        <!-- Formulario de edición del edificio -->
        <section class="form-container">
            <form id="form-edificacio">

                <!-- Contenedor que agrupa los primeros campos + imagen -->
                <div class="top-section">

                    <!-- Campos izquierdos -->
                    <div class="fields-left">
                        <div class="form-group">
                            <label for="name">Nom: <span class="required">*</span></label>
                            <input type="text" id="name" name="name" value="<%= building.name %>" required />
                        </div>

                        <div class="form-group">
                            <label for="address">Adreça: <span class="required">*</span></label>
                            <input type="text" id="address" name="address" value="<%= building.location %>" required />
                        </div>

                        <div class="form-group">
                            <label for="coordinates">Cordenades: <span class="required">*</span></label>
                            <input type="text" id="coordinates" name="coordinates" value="<%= building.coordinates %>"
                                required />
                        </div>

                        <div class="form-group">
                            <label for="construction_year">Any construcció: <span class="required">*</span></label>
                            <input type="number" id="construction_year" name="construction_year"
                                value="<%= building.construction_year %>" required />
                        </div>
                    </div>

                    <!-- Imagen derecha -->
                    <div class="image-container-building">
                        <% if (building.picture) { %>
                            <img src="<%= building.picture %>" alt="Imatge de l'edificació" class="building-image">
                            <% } else { %>
                                <div class="no-image-placeholder">
                                    <i class="fas fa-building"></i>
                                    <p>Sense imatge</p>
                                </div>
                                <% } %>
                    </div>

                </div>

                <div class="form-group">
                    <label for="picture">Imatge:</label>
                    <input type="file" id="picture" name="picture" accept="image/*" />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"><%= building.description %></textarea>
                </div>

                <div class="form-group">
                    <label for="extra_description">Descripció Extra:</label>
                    <textarea id="extra_description" name="extra_description"></textarea>
                </div>

                <div class="form-group">
                    <label for="surface_area">Superfície (m²):</label>
                    <input type="number" id="surface_area" name="surface_area" value="<%= building.surface_area %>" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="publications">Publicació: <span class="required">*</span></label>
                        <select id="publications" name="publications" required></select>
                    </div>
                    <div class="form-group">
                        <label for="architects">Arquitectes:</label>
                        <select id="architects" name="architects"></select>
                    </div>
                </div>


                <div class="form-row">

                    <div class="form-group">
                        <label for="protection">Protecció:</label>
                        <select id="protection" name="protection">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>

                    <div class="form-group" id="typologies-container">
                        <label for="typologies">Tipologia:</label>
                        <select id="typologies" name="typologies"></select>
                    </div>
                </div>


                <!-- Botón de enviado -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información del edificio para poder editarla -->
    <script>
        const building = JSON.parse('<%- JSON.stringify(building) %>');
    </script>
    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/buildings/buildingsEdit.js"></script>

</body>

</html>