<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Editar edificació</title>
    <!-- Estilos para el formulario de edición -->
    <link rel="stylesheet" href="/css/editForm.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Header de la página -->
    <header class="form-header">
        <a href="/buildings" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar edificació</h1>
    </header>


    <main class="flex-container">
        <!-- Formulario de edición del edificio -->
        <section class="form-container">
            <form id="form-edificacio">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="nom">Nom: <span class="required">*</span></label>
                    <input type="text" id="nom" name="nom" value="<%= building.name %>" required />
                </div>

                <div class="form-group">
                    <label for="adreca">Adreça: <span class="required">*</span></label>
                    <input type="text" id="adreca" name="adreca" value="<%= building.coordinates %>" required />
                </div>

                <div class="form-group">
                    <label for="any_construccio">Any construcció: <span class="required">*</span></label>
                    <input type="number" id="any_construccio" name="any_construccio"
                        value="<%= building.construction_year %>" required />
                </div>

                <div class="form-group">
                    <label for="picture">Imatge:</label>
                    <input type="text" id="picture" name="picture" value="<%= building.picture %>" />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"><%= building.description %></textarea>
                </div>

                <div class="form-group">
                    <label for="surface_area">Superfície (m²):</label>
                    <input type="number" id="surface_area" name="surface_area" value="<%= building.surface_area %>" />
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="publicacio_id">Publicació: <span class="required">*</span></label>
                        <select id="publicacio_id" name="publicacio_id" required></select>
                    </div>
                    <div class="form-group">
                        <label for="arquitectes">Arquitectes:</label>
                        <select id="arquitectes" name="arquitectes"></select>
                    </div>
                    <div class="form-group">
                        <label for="id_protection">Protecció:</label>
                        <select id="id_protection" name="id_protection">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>


                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="tipologia">Tipologia:</label>
                        <select id="tipologia" name="tipologia"></select>
                    </div>


                    <div class="form-group">
                        <label for="id_nomenclature">Nomenclatura:</label>
                        <select id="id_nomenclature" name="id_nomenclature">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>
                    <div class="form-group"></div>
                </div>


                <!-- Botón de enviado -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Guardar canvis
                </button>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información del edificio para poder editarla -->
    <script>
        const building = JSON.parse('<%- JSON.stringify(building) %>');
    </script>
    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/buildings/buildingsEdit.js"></script>

</body>

</html>