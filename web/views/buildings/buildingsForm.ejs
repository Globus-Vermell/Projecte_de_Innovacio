<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nova edificació</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de edificaciones -->
        <a href="/buildings" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Afegir una nova edificació</h1>
    </header>
    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir una nueva edificació -->
            <form id="form-edificacio">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="nom">Nom: <span class="required">*</span></label>
                    <input type="text" id="nom" name="nom" required />
                </div>

                <div class="form-group">
                    <label for="adreca">Adreça: <span class="required">*</span></label>
                    <input type="text" id="adreca" name="adreca" required />
                </div>

                <div class="form-group">
                    <label for="any_construccio">Any construcció: <span class="required">*</span></label>
                    <input type="number" id="any_construccio" name="any_construccio" required />
                </div>

                <div class="form-group">
                    <label for="picture">Imatge:</label>
                    <input type="text" id="picture" name="picture" />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <div class="form-group">
                    <label for="surface_area">Superfície (m²):</label>
                    <input type="number" id="surface_area" name="surface_area" />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="publicacio_id">Publicació: <span class="required">*</span></label>
                        <select id="publicacio_id" name="publicacio_id" required></select>
                    </div>
                    <div class="form-group">
                        <label for="arquitectes">Arquitectes:</label>
                        <select id="arquitectes" name="arquitectes"></select>
                    </div>
                    <div class="form-group">
                        <label for="id_protection">Protecció:</label>
                        <select id="id_protection" name="id_protection">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>


                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="tipologia">Tipologia:</label>
                        <select id="tipologia" name="tipologia"></select>
                    </div>


                    <div class="form-group">
                        <label for="id_nomenclature">Nomenclatura:</label>
                        <select id="id_nomenclature" name="id_nomenclature">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>
                    <div class="form-group"></div>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Guardar
                </button>
            </form>
        </section>
    </main>
    <!-- Script con la lógica del formulario -->
    <script src="/scripts/buildings/buildingsForm.js"></script>
</body>

</html>