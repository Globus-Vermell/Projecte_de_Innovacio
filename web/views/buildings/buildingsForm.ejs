<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nova edificació</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Libreria MultiSelect -->
    <link rel="stylesheet" href="/css/MultiSelect.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de edificaciones -->
        <a href="/buildings" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Afegir una nova edificació</h1>
    </header>
    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir una nueva edificació -->
            <form id="form-edificacio" enctype="multipart/form-data">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="name">Nom: <span class="required">*</span></label>
                    <input type="text" id="name" name="name" required />
                </div>

                <div class="form-group">
                    <label for="address">Adreça: <span class="required">*</span></label>
                    <input type="text" id="address" name="address" required />
                </div>

                <div class="form-group">
                    <label for="coordinates">Cordenades: <span class="required">*</span></label>
                    <input type="text" id="coordinates" name="coordinates" required />
                </div>

                <div class="form-group">
                    <label for="construction_year">Any construcció: <span class="required">*</span></label>
                    <input type="number" id="construction_year" name="construction_year" required />
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="publications">Publicació: <span class="required">*</span></label>
                        <select id="publications" name="publications" multiple></select>
                    </div>
                    <div class="form-group">
                        <label for="architects">Arquitectes:</label>
                        <select id="architects" name="architects" multiple></select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="protection">Protecció:</label>
                        <select id="protection" name="protection">
                            <option value="">-- Cap --</option>
                        </select>
                    </div>

                    <div class="form-group" id="typologies-container">
                        <label for="typologies">Tipologia:</label>
                        <select id="typologies" name="typologies"></select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="picture">Imatge:</label>
                    <input type="file" id="picture" name="picture" multiple accept="image/*" />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <div class="form-group">
                    <label for="extra_description">Descripció Extra:</label>
                    <textarea id="extra_description" name="extra_description"></textarea>
                </div>

                <div class="form-group">
                    <label for="surface_area">Superfície (m²):</label>
                    <input type="number" id="surface_area" name="surface_area" />
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>
            </form>
        </section>
    </main>
    <!-- Script con la lógica del formulario -->
    <script src="/scripts/buildings/buildingsForm.js"></script>
    <!-- Script MultiSelect -->
    <script src="/scripts/MultiSelect.js"></script>
</body>

</html>