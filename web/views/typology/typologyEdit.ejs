<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Tipología</title>

    <!-- Estilos del formulario -->
    <link rel="stylesheet" href="/css/form.css">

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Header del formulario -->
    <header class="form-header">
        <a href="/typologies" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar Tipología</h1>
    </header>

    <main class="flex-container">

        <!-- Contenedor del formulario -->
        <section class="form-container">
            <form id="form-typology-edit">

                <div class="top-section">

                    <div class="col-left">

                        <!-- Nombre de la tipología -->
                        <div class="form-group">
                            <label for="name">Nom: <span class="required">*</span></label>
                            <input type="text" id="name" name="name" value="<%= typology.name %>" required />
                        </div>
                    </div>

                    <div class="col-right">
                        <div class="form-group">
                            <label>Imatge actual:</label>
                            <div class="image-container-typology">
                                <% if (typology.image) { %>
                                    <img src="<%=typology.image %>" alt="Imatge tipologia" class="typology-image">
                                    <% } else { %>
                                        <div class="no-image-placeholder-typologies">
                                            <i class="fas fa-image"></i>
                                            <span>Sense imatge</span>
                                        </div>
                                        <% } %>
                            </div>
                        </div>

                        <!-- Imagen de la tipología -->
                        <div class="form-group">
                            <label for="image">Imatge :</label>
                            <input type="file" id="image" name="image" accept="image/*" />
                        </div>
                    </div>

                </div>

                <div class="form-actions">
                    <button type="submit" class="submit-button">
                        <i class="fas fa-save"></i> Guardar Canvis
                    </button>
                </div>

            </form>
        </section>

    </main>

    <!-- Script que guarda la información de la tipología para poder editarla -->
    <script>
        const typology = JSON.parse('<%- JSON.stringify(typology) %>');
    </script>

    <!-- Script que maneja la lógica del formulario de edición -->
    <script src="/scripts/typology/typologyEdit.js"></script>

</body>

</html>