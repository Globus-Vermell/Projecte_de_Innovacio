<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tipologies</title>
</head>
<body>
  <h1>Llitat de Tipologies</h1>

  <% if (typologies && typologies.length > 0) { %>
    <ul>
      <% typologies.forEach(t => { %>
        <li>
          <strong><a href="/typology/edit/<%= t.id_typology %>"><%= t.name %></a></strong>  
          <% if (t.image) { %>
            <br><img src="<%= t.image %>" alt="<%= t.name %>" width="200"> <!-- Imagen cargada directamente de la base de datos -->
          <% } %>
          <button type="button" onclick="deleteTypology('<%= t.id_typology %>')">Eliminar</button>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>No hi ha tipologies registrades.</p>
  <% } %>

  <a href="/">Tornar a l'inici</a>
  <a href="/typology/form">Afegir nova tipologia</a>
  <script>
    async function deleteTypology(id) {
      if (!confirm("Segur que vols eliminar aquesta tipologia?")) return;

      try {
        const res = await fetch(`/typology/delete/${id}`, {
          method: "DELETE"
        });

        const data = await res.json();
        alert(data.message);

        if (data.success) location.reload();
      } catch (err) {
        console.error(err);
        alert("Error al eliminar la tipologia");
      }
    }
  </script>
</body>
</html>