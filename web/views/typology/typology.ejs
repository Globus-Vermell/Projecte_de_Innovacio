<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tipologies</title>

    <!-- Css principal de la página y estilo de Emojis y simbolos usandos en la pagina -->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Cabecera de la página -->
    <header class="page-header">

        <!-- Botón para volver atrás -->
        <div class="header-left">
            <a href="/" class="back-link">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="page-title">Tipologies</h1>
        </div>

        <!-- Botón para añadir nueva tipología -->
        <div class="header-right">
            <a href="/typology/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nova tipologia
            </a>
        </div>

    </header>

    <!-- Contenido principal -->
    <main class="main-content">

        <!-- Barra de búsqueda -->
        <div class="search-container-modern">
            <!-- Agrupa la barra de búsqueda y el botón de filtros en una fila -->
            <form class="form" onsubmit="event.preventDefault()">
                <!-- El atributo 'onsubmit' evita que la página se recargue si el usuario pulsa Enter por error -->
                <button type="button">
                    <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img"
                        aria-labelledby="search">
                        <path d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9"
                            stroke="currentColor" stroke-width="1.333" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg>
                </button>
                <input id="searchInput" class="input" placeholder="Buscar per nom, descripció..." required=""
                    type="text" onkeyup="filterTypologies()">
                <!-- 'type=reset' borra el texto automáticamente y 'onclick' refresca la lista vacía -->
                <button class="reset" type="reset" onclick="filterTypologies()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </form>
        </div>

        <!-- Lista de tipologías -->
        <section class="list">

            <% if (typologies && typologies.length> 0) { %>
                <% typologies.forEach(t=> { %>

                    <!-- Card de cada tipología, se guardan data para usar en filtros -->
                    <article class="card" data-name="<%= t.name %>">

                        <!-- Imagen de la tipología -->

                        <figure class="card-image">
                            <% if (t.image) { %>
                                <img src="<%= t.image %>" alt="<%= t.name %>" class="img_list">
                                <% } %>
                                    <% else { %>
                                        <img src="/images/buildings/provisional.png" alt="no image" class="img_list">
                                        <% } %>
                        </figure>

                        <!-- Información principal de la tipología -->
                        <div class="card-info">
                            <h3 class="card-title">
                                <%= t.name %>
                            </h3>
                        </div>

                        <!-- Botones para realizar acciones: Editar y Borrar -->
                        <div class="card-actions">

                            <!-- Editar tipología -->
                            <a href="/typology/edit/<%= t.id_typology %>" class="edit-button">
                                <img src="/images/icons/edit_icon.png" alt="Editar"> Editar
                            </a>

                            <!-- Borrar tipología -->
                            <button type="button" class="delete-button"
                                onclick="deleteTypology('<%= t.id_typology %>')">
                                <img src="/images/icons/trash-2-64.png" alt="Borrar"> Eliminar
                            </button>

                        </div>

                    </article>

                    <% }) %>

                        <% } else { %>

                            <!-- Si no hay tipologías registradas -->
                            <p class="no-architects">No hi ha tipologies registrades.</p>

                            <% } %>

        </section>

    </main>

    <!-- Script para filtrado y eliminación -->
    <script src="/scripts/typology/typology.js"></script>

</body>

</html>