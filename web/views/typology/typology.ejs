<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tipologies</title>

  <link rel="stylesheet" href="/css/paginaPrincipal.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

  <header class="page-header">

    <div class="header-left">
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i>
      </a>
      <h1 class="page-title">Llistat de Tipologies</h1>
    </div>

    <div class="header-right">
      <a href="/typology/form" class="add-button">
        <i class="fas fa-plus"></i> Afegir nova tipologia
      </a>
    </div>

  </header>

  <main class="main-content">

    <!-- BARRA DE BÃšSQUEDA -->
    <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Buscar tipologies..." onkeyup="filterTypologies(this.value)">
    </div>

    <% if (typologies && typologies.length> 0) { %>

      <div class="architect-list">

        <% typologies.forEach(t=> { %>

          <a href="/typology/edit/<%= t.id_typology %>" class="architect-card-link">
            <div class="architect-card" data-name="<%= t.name %>">

              <div class="card-header">

                <div class="card-title-group">

                  <h3>
                    <%= t.name %>
                  </h3>
                </div>

                <button type="button" class="delete-button" onclick="deleteTypology('<%= t.id_typology %>')">
                  <i class="fas fa-trash-alt"></i>
                </button>

              </div>

              <% if (t.image) { %>
                <div class="card-image-container">
                  <img src="<%= t.image %>" alt="<%= t.name %>" class="card-image">
                </div>
                <% } %>

            </div>
          </a>

          <% }); %>

      </div>

      <% } else { %>

        <p class="no-architects">No hi ha tipologies registrades.</p>

        <% } %>

  </main>

  <script src="/scripts/typology/typology.js"></script>
</body>

</html>