<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Premis</title>
  <!-- Enlace a tu archivo CSS -->
  <link rel="stylesheet" href="/css/paginaPrincipal.css">
  <!-- Enlace a Font Awesome para los iconos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<body>
  <!-- Header de la página (equivalente a .page-header) -->
  <header class="page-header">
    <div class="header-left">
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i> Tornar a l'inici
      </a>
      <h1 class="page-title">Llistat de Premis</h1>
    </div>
    <div class="header-right">
      <a href="/prizes/form" class="add-button">
        <i class="fas fa-plus"></i> Afegir nou premi
      </a>
    </div>
  </header>

  <!-- Contenido principal (equivalente a .main-content) -->
  <main class="main-content">
    <!-- Barra de búsqueda (puedes añadirla si la necesitas, aunque el HTML original no la tenía) -->
    <!-- <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Buscar premios...">
    </div> -->

    <% if (prizes && prizes.length> 0) { %>
      <!-- Lista de premios, usando las clases de arquitectos como referencia para las tarjetas -->
      <div class="architect-list">
        <% prizes.forEach(prize=> { %>
          <div class="architect-card">
            <div class="card-header">
              <div class="card-title-group">
                <a href="/prizes/edit/<%= prize.id_prize %>" class="edit-icon">
                  <i class="fas fa-pencil-alt"></i>
                </a>
                <h3>
                  <%= prize.name %>
                </h3>
                <div class="card-meta-info">
                  <span class="dates">(<%= prize.year %>)</span>
                  <span class="nationality">Tipo: <%= prize.tipe %></span>
                </div>
              </div>
              <button type="button" onclick="deletePrize('<%= prize.id_prize %>')" class="delete-button">
                <i class="fas fa-trash-alt"></i>
              </button>
            </div>
            <!-- Puedes añadir una descripción si el premio la tuviera
            <p class="card-description">Breve descripción del premio o detalles adicionales si los hubiera.</p> -->
          </div>
          <% }); %>
      </div>
      <% } else { %>
        <p class="no-architects">No hi ha premis registrats.</p>
        <% } %>
  </main>

  <script>
    async function deletePrize(id) {

      if (!confirm("Segur que vols eliminar aquest premi?")) return;

      try {
        const res = await fetch(`/prizes/delete/${id}`, {
          method: "DELETE"
        });

        const data = await res.json();
        alert(data.message);

        if (data.success) location.reload();
      } catch (err) {
        console.error(err);
        alert("Error al eliminar el premi");
      }
    }
  </script>
</body>

</html>