<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premis</title>

    <!-- Css principal y estilo de Emojis y simbolos usandos en la pagina-->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Cabecera de la página -->
    <header class="page-header">

        <!-- Botón para volver atrás -->
        <div class="header-left">
            <a href="/" class="back-link"><i class="fas fa-arrow-left"></i></a>
            <h1 class="page-title">Llistat de Premis</h1>
        </div>

        <!-- Botón para añadir nuevo premio -->
        <div class="header-right">
            <a href="/prizes/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nou premi
            </a>
        </div>

    </header>

    <!-- Contenido principal -->
    <main class="main-content">

        <!-- Barra de búsqueda para filtrar premios -->
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Buscar per nom, any, tipus..." onkeyup="filterPrizes(this.value)">
        </div>

        <!-- Lista de premios -->
        <section class="list">

            <!-- Bucle lógico que recorre todos los premios -->
            <% if (prizes && prizes.length> 0) { %>
                <% prizes.forEach(prize=> { %>

                    <!-- Card de cada premio, se guardan data para usar en filtros -->
                    <article class="card" data-name="<%= prize.name %>" data-year="<%= prize.year %>"
                        data-type="<%= prize.tipe %>"
                        data-description="<%= prize.description ? prize.description : '' %>">

                        <!-- Información principal del premio -->
                        <div class="card-info">

                            <h3 class="card-title">
                                <%= prize.name %>
                            </h3>

                            <p class="card-type">Tipus: <%= prize.tipe %>
                            </p>
                            <p class="card-year">Any: <%= prize.year %>
                            </p>

                            <!-- Descripción del premio -->
                            <p class="card-description">
                                <%= prize.description ? prize.description : "Sense descripció disponible." %>
                            </p>

                        </div>

                        <!-- Botones para realizar acciones: Editar y Borrar -->
                        <div class="card-actions">

                            <!-- Editar premio -->
                            <a href="/prizes/edit/<%= prize.id_prize %>" class="edit-button">
                                <img src="/images/icons/edit_icon.png" alt="Editar">Editar
                            </a>

                            <!-- Borrar premio -->
                            <button type="button" class="delete-button" onclick="deletePrize('<%= prize.id_prize %>')">
                                <img src="/images/icons/trash-2-64.png" alt="Borrar">Eliminar
                                Eliminar
                            </button>

                        </div>

                    </article>

                    <% }) %>

                        <% } else { %>

                            <!-- Si no hay premios registrados -->
                            <p class="no-architects">No hi ha premis registrats.</p>

                            <% } %>

        </section>

    </main>

    <!-- Script para filtrado y eliminación -->
    <script src="/scripts/prizes/prizes.js"></script>

</body>

</html>