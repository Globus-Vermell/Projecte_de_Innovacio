<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Premis</title>

  <link rel="stylesheet" href="/css/paginaPrincipal.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>

  <header class="page-header">
    <div class="header-left">
      <a href="/" class="back-link">
        <i class="fas fa-arrow-left"></i> Tornar a l'inici
      </a>
      <h1 class="page-title">Llistat de Premis</h1>
    </div>

    <div class="header-right">
      <a href="/prizes/form" class="add-button">
        <i class="fas fa-plus"></i> Afegir nou premi
      </a>
    </div>
  </header>

  <main class="main-content">

    <!-- BARRA DE BÚSQUEDA -->
    <div class="search-bar">
      <i class="fas fa-search"></i>
      <input type="text" placeholder="Buscar per nom, any, tipus..." onkeyup="filterPrizes(this.value)">
    </div>

    <% if (prizes && prizes.length > 0) { %>

      <div class="architect-list">

        <% prizes.forEach(prize => { %>

          <div class="architect-card"
               data-name="<%= prize.name %>"
               data-year="<%= prize.year %>"
               data-tipe="<%= prize.tipe %>">

            <div class="card-header">

              <div class="card-title-group">
                <a href="/prizes/edit/<%= prize.id_prize %>" class="edit-icon">
                  <i class="fas fa-pencil-alt"></i>
                </a>

                <h3><%= prize.name %></h3>

                <div class="card-meta-info">
                  <span class="dates">(<%= prize.year %>)</span>
                  <span class="nationality">Tipus: <%= prize.tipe %></span>
                </div>
              </div>

              <button type="button"
                      onclick="deletePrize('<%= prize.id_prize %>')"
                      class="delete-button">
                <i class="fas fa-trash-alt"></i>
              </button>

            </div>

          </div>

        <% }); %>

      </div>

    <% } else { %>

      <p class="no-architects">No hi ha premis registrats.</p>

    <% } %>

  </main>

  <script src="/scripts/prizes/prizes.js"></script>
</body>

    // FILTRO DE LA BARRA DE BÚSQUEDA
    function filterPrizes(searchTerm) {
      const cards = document.querySelectorAll('.architect-card');
      const lower = searchTerm.toLowerCase();

      cards.forEach(card => {
        const name = (card.dataset.name || '').toLowerCase();
        const year = (card.dataset.year || '').toLowerCase();
        const tipe = (card.dataset.tipe || '').toLowerCase();

        if (name.includes(lower) || year.includes(lower) || tipe.includes(lower)) {
          card.style.display = 'flex';
        } else {
          card.style.display = 'none';
        }
      });
    }

  </script>

</body>
</html>
