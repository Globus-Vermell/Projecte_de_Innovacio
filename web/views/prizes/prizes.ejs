<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premis</title>

    <!-- Css principal y estilo de Emojis y simbolos usandos en la pagina-->
    <link rel="stylesheet" href="/css/paginaPrincipal.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Cabecera de la página -->
    <header class="page-header">

        <!-- Botón para volver atrás -->
        <div class="header-left">
            <a href="/" class="back-link"><i class="fas fa-arrow-left"></i></a>
            <h1 class="page-title">Llistat de Premis</h1>
        </div>

        <!-- Botón para añadir nuevo premio -->
        <div class="header-right">
            <a href="/prizes/form" class="add-button">
                <i class="fas fa-plus"></i> Afegir nou premi
            </a>
        </div>

    </header>

    <!-- Contenido principal -->
    <main class="main-content">

        <!-- Barra de búsqueda -->
        <div class="search-container-modern">
            <!-- Agrupa la barra de búsqueda y el botón de filtros en una fila -->
            <form class="form" onsubmit="event.preventDefault()">
                <!-- El atributo 'onsubmit' evita que la página se recargue si el usuario pulsa Enter por error -->
                <button type="button">
                    <svg width="17" height="16" fill="none" xmlns="http://www.w3.org/2000/svg" role="img"
                        aria-labelledby="search">
                        <path d="M7.667 12.667A5.333 5.333 0 107.667 2a5.333 5.333 0 000 10.667zM14.334 14l-2.9-2.9"
                            stroke="currentColor" stroke-width="1.333" stroke-linecap="round" stroke-linejoin="round">
                        </path>
                    </svg>
                </button>
                <input id="searchInput" class="input" placeholder="Buscar per nom, descripció..." required=""
                    type="text" onkeyup="filterPrizes()">
                <!-- 'type=reset' borra el texto automáticamente y 'onclick' refresca la lista vacía -->
                <button class="reset" type="reset" onclick="filterPrizes()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </form>
        </div>

        <!-- Lista de premios -->
        <section class="list">

            <!-- Bucle lógico que recorre todos los premios -->
            <% if (prizes && prizes.length> 0) { %>
                <% prizes.forEach(prize=> { %>

                    <!-- Card de cada premio, se guardan data para usar en filtros -->
                    <article class="card" data-name="<%= prize.name %>" data-year="<%= prize.year %>"
                        data-type="<%= prize.tipe %>"
                        data-description="<%= prize.description ? prize.description : '' %>">

                        <!-- Información principal del premio -->
                        <div class="card-info">

                            <h3 class="card-title">
                                <%= prize.name %>
                            </h3>

                            <p class="card-type">Tipus: <%= prize.tipe %>
                            </p>
                            <p class="card-year">Any: <%= prize.year %>
                            </p>

                            <!-- Descripción del premio -->
                            <p class="card-description">
                                <%= prize.description ? prize.description : "Sense descripció disponible." %>
                            </p>

                        </div>

                        <!-- Botones para realizar acciones: Editar y Borrar -->
                        <div class="card-actions">

                            <!-- Editar premio -->
                            <a href="/prizes/edit/<%= prize.id_prize %>" class="edit-button">
                                <img src="/images/icons/edit_icon.png" alt="Editar">Editar
                            </a>

                            <!-- Borrar premio -->
                            <button type="button" class="delete-button" onclick="deletePrize('<%= prize.id_prize %>')">
                                <img src="/images/icons/trash-2-64.png" alt="Borrar">Eliminar
                            </button>

                            <!-- Validar premio -->
                            <button class="validation-button" onclick="validateBuilding('<%= prize.id_prize %>')">
                                <img src="/images/icons/check-icon.png" alt="Validar">Validar
                            </button>

                        </div>

                    </article>

                    <% }) %>

                        <% } else { %>

                            <!-- Si no hay premios registrados -->
                            <p class="no-architects">No hi ha premis registrats.</p>

                            <% } %>

        </section>

    </main>

    <!-- Script para filtrado y eliminación -->
    <script src="/scripts/prizes/prizes.js"></script>

</body>

</html>