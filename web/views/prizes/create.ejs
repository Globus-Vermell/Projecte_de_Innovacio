<!DOCTYPE html>
<html lang="ca">

<head>
    <%- include('../partials/head', { title: 'Nou Premi' , cssType: 'form' }) %>
</head>

<body>
    <!-- Encabezado del formulario -->
    <%- include('../partials/headerForm', { backUrl: '/prizes' , title: 'Nou Premi' }) %>

        <!-- Contenedor principal del formulario -->
        <main class="flex-container">
            <section class="form-container">
                <!-- Formulario para añadir un nuevo premio -->
                <form id="main-form" class="api-form" action="/prizes/create" method="POST">
                    <!-- Campos del formulario -->
                    <div class="form-group">
                        <label for="name">Nom del premi:<span class="required">*</span></label>
                        <input type="text" id="name" name="name" required />
                    </div>

                    <div class="form-group">
                        <label for="tipe">Tipus:</label>
                        <input type="text" id="tipe" name="tipe" />
                    </div>

                    <div class="form-group">
                        <label for="year">Any:</label>
                        <input type="number" id="year" name="year" />
                    </div>

                    <div class="form-group">
                        <label for="description">Descripció:</label>
                        <textarea id="description" name="description"></textarea>
                    </div>
                </form>
            </section>
        </main>

</body>

</html>