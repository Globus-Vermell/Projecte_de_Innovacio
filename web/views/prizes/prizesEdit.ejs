<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Editar Premio</title>

    <!-- Estilos del formulario -->
    <link rel="stylesheet" href="/css/editForm.css">

    <!-- Iconos Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>

    <!-- Encabezado de la página -->
    <header class="form-header">
        <a href="/prizes" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Editar Premio</h1>
    </header>

    <main class="flex-container">
        <!-- Formulario de edición del premio -->
        <section class="form-container">
            <form id="form-prize-edit">

                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="name">Nombre <span class="required">*</span></label>
                    <input type="text" id="name" name="name" value="<%= prize.name %>" required />
                </div>

                <div class="form-group">
                    <label for="tipe">Tipo</label>
                    <input type="text" id="tipe" name="tipe" value="<%= prize.tipe %>" />
                </div>

                <div class="form-group">
                    <label for="year">Año</label>
                    <input type="number" id="year" name="year" value="<%= prize.year %>" />
                </div>

                <div class="form-group">
                    <label for="description">Descripción</label>
                    <textarea id="description" name="description"><%= prize.description %></textarea>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Guardar cambios
                </button>

            </form>
        </section>
    </main>

    <!-- Script con la información del premio -->
    <script>
        const prize = JSON.parse('<%- JSON.stringify(prize) %>');
    </script>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/prizes/prizesEdit.js"></script>

</body>

</html>