<!DOCTYPE html>
<html lang="ca">

<head>
    <meta charset="UTF-8">
    <title>Nou Premi</title>
    <!-- Estilos para el formulario de creación -->
    <link rel="stylesheet" href="/css/createForm.css">
    <!-- Font Awesome para los iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    <!-- Encabezado del formulario -->
    <header class="form-header">
        <!-- Enlace para volver a la lista de premios -->
        <a href="/prizes" class="back-link">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="page-title">Afegir un nou premi</h1>
    </header>

    <!-- Contenedor principal del formulario -->
    <main class="flex-container">
        <section class="form-container">
            <!-- Formulario para añadir un nuevo premio -->
            <form id="form-prize">
                <!-- Campos del formulario -->
                <div class="form-group">
                    <label for="name">Nom del premi:<span class="required">*</span></label>
                    <input type="text" id="name" name="name" required />
                </div>

                <div class="form-group">
                    <label for="tipe">Tipus:</label>
                    <input type="text" id="tipe" name="tipe" />
                </div>

                <div class="form-group">
                    <label for="year">Any:</label>
                    <input type="number" id="year" name="year" />
                </div>

                <div class="form-group">
                    <label for="description">Descripció:</label>
                    <textarea id="description" name="description"></textarea>
                </div>

                <!-- Botón de envío -->
                <button type="submit" class="submit-button">
                    <i class="fas fa-save"></i> Desar
                </button>
            </form>
        </section>
    </main>

    <!-- Script con la lógica del formulario -->
    <script src="/scripts/prizes/prizesForm.js"></script>
</body>

</html>